{% if app.user %}

    <!-- Modal -->
    <div aria-hidden="true" aria-labelledby="exampleModalLongTitle" class="modal fade" id="invitationRecu" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Invitations recues</h5>
                    <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% for invitation in app.user.getInvitationsRecu() %}
                        <div class="col">
                            <div class="media mb-4 ">
                                {% if invitation.getUserQuiInvite.image.name is defined %}
                                    <img src="{{asset('images/') ~ invitation.getUserQuiInvite.image.name}}" class="d-flex mr-3 rounded-circle" with="50px" height="50px" alt="photo de profil">
                                {% endif %}
                                <div class="media-body">
                                    <h5 class="media-title">{{invitation.getUserQuiInvite.username }}</h5>
                                    <p class="media-text">
                                        <span>Age :
                                            {{invitation.getUserQuiInvite.age}}
                                            <br></span>
                                        <div>Activit√© (es) :
                                            {% for activite in invitation.getUserQuiInvite.getActivite() %}
                                                <br><span>{{activite.name}}</span>
                                            {% endfor %}
                                        </div>
                                    </p>
                                </div>
                            </div>
                            <button class="btn btn-danger cacher" onclick="removeInvitation({{invitation.id}})">
                                <i class="fas fa-user-times"></i>
                            </button>
                            <button class="btn btn-success cacher" onclick="accepterInvitation({{invitation.id}})">
                                <i class="fas fa-user-plus"></i>
                            </button>
                        </div>
                    {% endfor %}

                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endif %}
