{% if app.user %}
    <div class="postsScroll">
        {% for post in postsUser %}
            <!-- Button trigger modal -->
            <div class="card mb-2">
                <div class="card-header" id="headingOne">
                    <div data-target="#pu{{post.id}}" data-toggle="modal">
                        {% if post.image[0] is defined %}
                            <img alt="" src="{{asset('imagesposts/') ~ post.image[0].name}}" class=" img-fluid">
                        {% endif %}
                        <div class="description" style="overflow:hidden;height:50px">
                            {{post.content}}</div>
                        {{post.createdAt | date('d/m/y à h:m:s','Europe/Paris')}}
                    </div>
                </div>
                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="postsUser" class="modal fade" id="pu{{post.id}}" role="dialog" tabindex="-1">
                    <div class="modal-dialog modal-lg " role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title " id="postsAmis">Poster le :
                                    {{post.createdAt | date('d/m/y à h:m:s','Europe/Paris') }}
                                </h5>
                                <button aria-label="Close" class="close" data-dismiss="modal" type="button">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                {{post.content}}
                                {% for image in post.image %}
                                    <img src="{{asset('imagesPosts/' ~ image.name)}}" class="img-fluid" alt="image post">
                                {% endfor %}
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary" type="button">modifier
                                </button>
                                <button class="btn btn-danger" type="button">supprimer
                                </button>
                                <button class="btn btn-secondary" data-dismiss="modal" type="button">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endif %}
